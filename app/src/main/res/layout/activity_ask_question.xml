<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002028"
    tools:context=".AskQuestion">

    <TextView
        android:id="@+id/textView45"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:layout_marginTop="44dp"
        android:background="#9444"
        android:gravity="center"
        android:padding="2px"
        android:text="Question"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/roundbtn"
        android:text="submit"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.846"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/str_question"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/str_question"
        android:layout_width="353dp"
        android:layout_height="179dp"
        android:layout_marginTop="92dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="start"
        android:hint="Enter Your Question Here"
        android:inputType="textPersonName"
        android:padding="20px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/identity_switch"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="21dp"
        android:text="Hide Identity"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/str_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>